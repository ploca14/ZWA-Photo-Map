{% extends '/base.html.twig' %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div class="login-wrapper col-md-8 col-lg-6 col-xl-5">
        <div class="login-container">
          <div class="login-header">
            <h1>Přihlásit se</h1>
            <a href="{{ path('index') }}">
              <i class="eva eva-2x eva-close-outline"></i>
            </a>
          </div>
          {% if error %}
            <p class="error-general">{{ error.messageKey|trans([], 'security') }}</p>
          {% endif %}

          <form method="post" name="login">
            <div class="input-wrapper">
              <label for="username">E-mail</label>
              <input
                type="email"
                id="username"
                name="_username"
                value="{{ last_username }}"
                placeholder="name@fel.cvut.cz"
                class="input-base"
                required
              />
            </div>

            <div class="input-wrapper">
              <label for="password">Heslo</label>
              <input
                type="password"
                id="password"
                name="_password"
                placeholder="Heslo"
                class="input-base"
                required
              />
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('login') }}">

            <button type="submit" class="btn btn-primary">Přihlásit</button>
          </form>

          <p class="no-account">Ještě nemáš účet? <a href="{# TODO: Add link to registration #}">Zaregistruj se</a></p>
        </div>
      </div>
      <div class="col">
        <img src="{{ asset('build/images/cover.jpg') }}" alt="Pozadí" class="img-cover">
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('login') }}
{% endblock %}